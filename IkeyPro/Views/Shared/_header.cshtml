                                        </li>
                                    }
                                </ul>
                            </li>
                            <li class="hassubs">
                                <a href="#">@Localizer["PFeaturedBrands"]<i class="fas fa-chevron-down"></i></a>
                                <ul>
                                    @foreach (var editeur in ListeEditeurs)
                                    {
                                        <li>
                                            <a href="ListeProduits?action=editeur&edit=@editeur.Id_Editeur ">
                                                @editeur.Editeur_Designation<i class="fas fa-chevron-down"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                            <li><a href="Affichage?action=blog">@Localizer["PBlog"]<i class="fas fa-chevron-down"></i></a></li>
                            <li><a href="Affichage?action=contact">@Localizer["PContact"]<i class="fas fa-chevron-down"></i></a></li>
                        </ul>
                    </div>

